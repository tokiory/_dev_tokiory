// Static tasks configuration.
//
// Example:
[
	{
		"label": "Development",
		"command": "bun dev",
		"use_new_terminal": false,
		"allow_concurrent_runs": false,
		"reveal": "never",
		"reveal_target": "dock",
		"hide": "on_success",
		"shell": "system",
		"tags": ["development"]
	},
	{
		"label": "Build",
		"command": "bun run build",
		"use_new_terminal": false,
		"allow_concurrent_runs": false,
		"reveal": "always",
		"reveal_target": "dock",
		"hide": "never",
		"shell": "system",
		"tags": ["production"]
	},
	{
		"label": "Preview build",
		"command": "bun preview",
		"use_new_terminal": false,
		"allow_concurrent_runs": false,
		"reveal": "never",
		"reveal_target": "dock",
		"hide": "on_success",
		"shell": "system",
		"tags": ["production"]
	}
]
